<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MusicApplication.ClientUIController" stylesheets="@styles.css">
    <top>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <TextField fx:id="searchField" promptText="Search for a song" />
            <Button fx:id="searchButton" onAction="#handleSearch" text="Search" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="songTable" prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="songTitleColumn" text="Title" />
                <TableColumn fx:id="artistColumn" text="Artist" />
                <TableColumn fx:id="playCountColumn" text="Play Count" />
                <TableColumn fx:id="durationColumn" text="Duration" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER"> 
            <Button fx:id="prevButton" onAction="#handlePrevious" text="Previous" />
            <Button fx:id="playPauseButton" onAction="#handlePlayPause" text="Play/Pause" />
            <Button fx:id="nextButton" onAction="#handleNext" text="Next" />
            <Label fx:id="currentTimeLabel" text="00:00" />
            <Slider fx:id="progressSlider" maxWidth="500" />
            <Label fx:id="totalDurationLabel" text="00:00" />
        </HBox>
    </bottom>
    <left>
        <MediaView fx:id="mediaView" />
    </left>
</BorderPane>